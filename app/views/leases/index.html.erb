<h1>Listing Leases</h1>


<table>
	<tr>
		<th>Address</th>
		<th>Rent</th>
		<th>Start Date</th>
		<th>End Date</th>
		<th>Security Deposit</th>
		<th>Conditions</th>
	</tr>

<% @leases.each do |lease| %>
	<tr>
		<td><%= lease.holding.address %></td>
		<td><%= lease.rent %></td>
		<td><%= lease.start_date %></td>
		<td><%= lease.end_date %></td>
		<td><%= lease.security_deposit %></td>
		<td><%= lease.conditions %></td>
		<td><%= link_to 'Show', lease_path(lease) %></td>
		<td><%= link_to 'Edit', edit_lease_path(lease) %></td>
		<td><%= link_to 'Delete', lease_path(lease), method: :delete, data: { confirm: 'Are you sure you want to delete this?' } %></td>
<% end %>
</table>

